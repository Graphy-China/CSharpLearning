<%= form_for @event, :url => event_path(@event), :method => :put  do |f| %>
  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>
  <%= f.label :description, 'Description' %>
  <%= f.text_area :description %>

  <%= f.submit "Update" %>
<% end %>
